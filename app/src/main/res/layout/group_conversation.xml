<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:id="@+id/mainBody"
    android:layout_margin="10dp"
    android:backgroundTint="#676666"
    android:foregroundTint="#6C6A6A">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/userprofile"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chaterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingTop="1dp"
            android:paddingBottom="5dp"
            android:text="Sample Name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:text="last message"
            android:textColor="#E3E3E3"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/selectTick"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="140dp"
            android:layout_marginTop="1.5dp"
            android:visibility="invisible"
            android:background="@drawable/ic_check"
            android:gravity="left"></ImageView>


        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="-28dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/nchats"
            android:gravity="center"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:gravity="right"
            android:text="4:52 pm"
            android:textColor="#E3E2E2" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="19dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>
